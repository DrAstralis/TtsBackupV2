<Window x:Class="TtsBackup.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TtsBackup.Wpf.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=False}"
        Title="TTS Asset Backup" Height="600" Width="1000">

    <DockPanel>
        <!-- Top bar -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
            <Button Content="Open Save..."
                    Width="120"
                    Margin="0,0,8,0"
                    Click="OpenSave_Click" />
            <TextBlock Text="{Binding StatusText}"
                       VerticalAlignment="Center" />
        </StackPanel>

        <!-- Main content -->
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <!-- Left panel: starts ~60% but user can resize -->
                <ColumnDefinition Width="3*" MinWidth="260" />
                <!-- Splitter column -->
                <ColumnDefinition Width="5" />
                <!-- Right panel: starts ~40% but user can resize -->
                <ColumnDefinition Width="2*" MinWidth="420" />
            </Grid.ColumnDefinitions>

            <!-- Left: object tree -->
            <Border Grid.Column="0"
                    BorderBrush="Gray" BorderThickness="1" Padding="4" Margin="0,0,8,0">
                <TreeView ItemsSource="{Binding RootNodes}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox
                                    IsThreeState="{Binding HasChildren}"
                                    IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    IsEnabled="{Binding IsSelectionLocked, Converter={StaticResource InvertBoolConverter}}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,6,0" />
                                <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <!-- Any URLs anywhere under this node (including descendants) -->
                                                <DataTrigger Binding="{Binding HasAnyUrls}" Value="True">
                                                    <Setter Property="Foreground" Value="DarkGreen" />
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </DataTrigger>
                                                <!-- URLs on the object itself (excluding ContainedObjects/States/ObjectStates) -->
                                                <DataTrigger Binding="{Binding HasOwnUrls}" Value="True">
                                                    <Setter Property="Foreground" Value="DarkBlue" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ResizeDirection="Columns"
                          ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True" />

            <!-- Right: included node details + edits -->
            <DockPanel Grid.Column="2">
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="Included selection details"
                               FontWeight="Bold"
                               Margin="0,0,0,8" />
                    <TextBlock Text="{Binding SummaryText}" TextWrapping="Wrap" />
                    <TextBlock Text="{Binding UrlSummaryText}" TextWrapping="Wrap" Margin="0,8,0,8">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AssetScanOk}" Value="True">
                                        <Setter Property="Foreground" Value="Green" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AssetScanHasWarnings}" Value="True">
                                        <Setter Property="Foreground" Value="OrangeRed" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding IncludedNodes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" Padding="6"
                                        Margin="{Binding Depth, Converter={StaticResource DepthToMarginConverter}}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding HeaderText}" FontWeight="SemiBold" VerticalAlignment="Center" />

                                            <Button Grid.Column="1" Content="Edit" Margin="6,0,0,0"
                                                    Command="{Binding BeginEditCommand}" />

                                            <Button Grid.Column="2" Content="Save" Margin="6,0,0,0"
                                                    Command="{Binding SaveCommand}" />

                                            <Button Grid.Column="3" Content="Cancel" Margin="6,0,0,0"
                                                    Command="{Binding CancelCommand}" />
                                        </Grid>

                                        <!-- CHANGED: collapse field list unless row is in edit mode -->
                                        <ItemsControl ItemsSource="{Binding Fields}" Margin="0,6,0,0">
                                            <ItemsControl.Style>
                                                <Style TargetType="ItemsControl">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ItemsControl.Style>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="0,2,0,2" Padding="4">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="Transparent" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsUrlGroupStripeA}" Value="True">
                                                                    <Setter Property="Background" Value="Goldenrod" />
                                                                </DataTrigger>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding IsUrlGroupMember}" Value="True" />
                                                                        <Condition Binding="{Binding IsUrlGroupStripeA}" Value="False" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Background" Value="LightGoldenrodYellow" />
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="180" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="{Binding DisplayName}" VerticalAlignment="Center" />

                                                        <!-- IMPORTANT: Do NOT use a UIElement instance in a Setter.Value.
                                                             WPF will reuse the same element across rows, so only the last row renders.
                                                             Instead, render BOTH read + edit controls and toggle Visibility. -->
                                                        <Grid Grid.Column="1">
                                                            <TextBlock x:Name="ReadValueText" Text="{Binding Value}" TextWrapping="Wrap" />
                                                            <TextBox x:Name="EditValueTextBox" Text="{Binding EditValue, UpdateSourceTrigger=PropertyChanged}" Visibility="Collapsed" />
                                                            <ComboBox x:Name="EditValueBoolCombo"
                                                                      SelectedValue="{Binding EditValue, UpdateSourceTrigger=PropertyChanged}"
                                                                      SelectedValuePath="Content"
                                                                      Visibility="Collapsed"
                                                                      HorizontalAlignment="Stretch"
                                                                      HorizontalContentAlignment="Left">
                                                                <ComboBoxItem Content="true" />
                                                                <ComboBoxItem Content="false" />
                                                            </ComboBox>
                                                        </Grid>

                                                        <Button Grid.Column="2" Content="Default" Margin="6,0,0,0"
                                                                Command="{Binding DataContext.ResetFieldToDefaultCommand, RelativeSource={RelativeSource AncestorType=Border}}"
                                                                CommandParameter="{Binding}">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <MultiDataTrigger>
                                                                            <MultiDataTrigger.Conditions>
                                                                                <Condition Binding="{Binding IsParentEditing}" Value="True" />
                                                                                <Condition Binding="{Binding IsOverridden}" Value="True" />
                                                                            </MultiDataTrigger.Conditions>
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </MultiDataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>

                                                        <Button Grid.Column="3" Content="Generate" Margin="6,0,0,0"
                                                                Command="{Binding DataContext.GenerateFilenameCommand, RelativeSource={RelativeSource AncestorType=Border}}"
                                                                CommandParameter="{Binding}">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <MultiDataTrigger>
                                                                            <MultiDataTrigger.Conditions>
                                                                                <Condition Binding="{Binding IsFilenameField}" Value="True" />
                                                                                <Condition Binding="{Binding NeedsFilename}" Value="True" />
                                                                                <Condition Binding="{Binding IsParentEditing}" Value="True" />
                                                                            </MultiDataTrigger.Conditions>
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </MultiDataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>

                                                    </Border>

                                                    <DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding IsParentEditing}" Value="True">
                                                            <Setter TargetName="ReadValueText" Property="Visibility" Value="Collapsed" />
                                                            <Setter TargetName="EditValueTextBox" Property="Visibility" Value="Visible" />
                                                        </DataTrigger>

                                                        <!-- Boolean fields: use a dropdown in edit mode instead of a text box. -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsParentEditing}" Value="True" />
                                                                <Condition Binding="{Binding IsBooleanField}" Value="True" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter TargetName="EditValueTextBox" Property="Visibility" Value="Collapsed" />
                                                            <Setter TargetName="EditValueBoolCombo" Property="Visibility" Value="Visible" />
                                                        </MultiDataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>

        </Grid>
    </DockPanel>
</Window>
